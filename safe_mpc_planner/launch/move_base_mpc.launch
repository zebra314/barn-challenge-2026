<launch>
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <rosparam file="$(find safe_mpc_planner)/configs/common_costmap_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find safe_mpc_planner)/configs/common_costmap_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find safe_mpc_planner)/configs/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find safe_mpc_planner)/configs/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find safe_mpc_planner)/configs/base_local_planner_params.yaml" command="load" />
        <rosparam file="$(find safe_mpc_planner)/configs/move_base_params.yaml" command="load" />

        <param name="base_global_planner" type="string" value="global_planner/GlobalPlanner" />
        <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS" />

        <remap from="odom" to="odometry/filtered" />
        <remap from="cmd_vel" to="cmd_vel_faked_by_move_base" />
    </node>

    <node pkg="safe_mpc_planner" type="optimization_node.py" name="optimization_node" output="screen">
        <remap from="global_plan" to="/move_base/NavfnROS/plan" />
        <remap from="cmd_vel" to="/cmd_vel" />

        <rosparam file="$(find safe_mpc_planner)/configs/mpc_params.yaml" command="load" />
    </node>

    <node pkg="safe_mpc_planner" type="perception_node.py" name="perception" output="screen">
        <param name="cluster_threshold" value="0.25" />
        <param name="min_points" value="3" />
        <param name="max_scan_range" value="5.0" />
        <param name="radius_inflation" value="0.05" />
        <param name="dt_threshold" value="1.0" />
    </node>

    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find safe_mpc_planner)/rviz/move_base.rviz" output="screen"/>

</launch>
